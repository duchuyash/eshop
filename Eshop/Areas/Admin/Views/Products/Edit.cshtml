@model Product

<div class="d-flex">
    <div class="h3 mb-3 font-weight-bold me-auto">
</div>

    <div class="p-2">
            <a asp-controller="Products" asp-action="Index" type="button" class="btn btn-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                     fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z">
                    </path>
                    <path fill-rule="evenodd"
                          d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z">
                    </path>
                </svg> Cancel
            </a>
           
        </div>
    <div class="pl-2 py-2">
            <form style='display:inline;' asp-controller="Products" asp-action="Edit" asp-area="Admin" onclick="return confirm('Are you sure you want to update this?')">

            <button type="button" class="btn btn-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-check" viewBox="0 0 16 16">
                    <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z" />
                    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                </svg> Edit

            </button>
            </form>
        
    </div>
    </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Change the product's infomation</h5>
            </div>
            <div class="card-body py-0 pb-3">
        <div class="row">
            <div class="col-md-1 form-group">
                <label>Image</label>
                <a onclick="chooseFile();" class="btn btn-secondary" id="choose">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"></path>
                        <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"></path>
                    </svg>
                </a>
            </div>
                    <div class="col-md-3 form-group">
                        <label>SKU</label>
                        <input asp-for="SKU" class="form-control" required>
                    </div>
                    <div class="col-md-5 form-group">
                        <label>Name</label>
                        <input asp-for="Name" class="form-control" required>
                    </div>
                    <input asp-for="ImageFile" id="imagefile" hidden>

                    
                    

    </div>
</div>

    <script>
        function chooseFile() {
            $("#imagefile").click();
        }

        const inputElement = document.getElementById("imagefile");

        inputElement.addEventListener("change", handleFiles, false);

        function handleFiles() {
            const fileList = this.files;
            if (fileList.length > 0) {
                $("#choose").addClass("btn-success");
                $("#choose").appendChild(this.files[0].name);
            }
        }

    </script>
